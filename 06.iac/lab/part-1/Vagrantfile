# -*- mode: ruby -*-
# vi: set ft=ruby :

Vagrant.configure("2") do |config|

  # Do not pay attention to this parameter
  if Vagrant.has_plugin?("vagrant-vbguest")
    config.vm.provider :virtualbox do |vb|
      config.vbguest.auto_update = false
    end
  end

  # Define the VM
  config.vm.define "centos_server" do |server|
    # Specify the Vagrant box to use
    server.vm.box = "centos/7"
    # Private network with a fixed IP (avoids 0.0.0.0 exposure)
    server.vm.network "private_network", ip: "192.168.56.10"
    # Specify the VM specs when using the Virtualbox provisioner
    server.vm.provider "virtualbox" do |vb|
      vb.name =  "centos.server.local"
      # VM RAM in MB
      vb.memory = 2048
      # VM CPUs
      vb.cpus = 1
    end
    config.vm.provider "vmware_desktop" do |vmware|
      vmware.vmx["memsize"] = "2048"
      vmware.vmx["numvcpus"] = "1"
    end
  end

  # Start provisioning
  # Step 1: Print Hello, World
  config.vm.provision "shell",
    inline: "echo Hello, World"

  # Step 2: Configure /etc/hosts
  config.vm.provision "shell",
    inline: "echo '127.0.0.1  mydomain-1.local' >> /etc/hosts"

  # Step 3: Write provisioning date to file
  $script = <<-SCRIPT
echo I am provisioning...
date > /etc/vagrant_provisioned_at
SCRIPT

  config.vm.provision "shell", inline: $script

end
